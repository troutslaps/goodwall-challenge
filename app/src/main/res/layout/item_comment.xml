<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="commentViewModel"
            type="com.troutslaps.goodwallchallenge.viewmodel.CommentViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="@{commentViewModel.getAuthorName()}"
            android:onClick="@{commentViewModel.onAuthorNameClicked()}"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="@{commentViewModel.getCommentTime()}"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="@{commentViewModel.getCommentBody()}"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>
</layout>